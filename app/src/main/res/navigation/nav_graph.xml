<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.ddroidapps.whatsappstatuses.presentation.WhatsappImagesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/whatsapp_images_list">
        <action
            android:id="@+id/action_FirstFragment_to_imageViewer"
            app:destination="@id/imageViewer" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.ddroidapps.whatsappstatuses.presentation.WhatsappVideoFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/whatsapp_video_list"/>
    <fragment
        android:id="@+id/imageViewer"
        android:name="com.ddroidapps.whatsappstatuses.presentation.WhatsAppImageViewer"
        android:label="ImageViewer" />
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/mainActivity">
        <activity
            android:id="@+id/mainActivity"
            android:name="com.ddroidapps.whatsappstatuses.presentation.WhatsAppStatusesMainActivity"
            android:label="activity_main"
            tools:layout="@layout/whatsapp_statuses_main" />
        <action
            android:id="@+id/action_global_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_global_SecondFragment"
            app:destination="@id/SecondFragment" />
    </navigation>
</navigation>